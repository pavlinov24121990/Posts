
<h1> Welcome to PostsV2 </h1>
<h2><%= flash[:alert] %></h2>
<div>
  <ul>
    <% @posts.each do |p| %>
      <li>
        <h2> <%= p.title %></h2>
        <p> <%= p.body %> </p> 
      </li>
      <p> <%= p.user.first_name %>  <%= p.user.second_name %></p> 
      <div>
      <%= link_to "Show", post_comments_path(p) %>
      </div>
    <% end %>
  </ul>
</div>
